<MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
    <MudDialog>
        <TitleContent>
            @{
                if (Id == 0)
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        Add Product
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                        Update Product
                    </MudText>
                }
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                @if (Id != 0)
                {
                    <MudItem xs="12" md="6">
                        <MudTextField Disabled For="@(() => Id)" @bind-Value="Id" Required="true" Label="Id" />
                    </MudItem>
                }
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => Name)" @bind-Value="Name" Required="true" Label="Name" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => Description)" @bind-Value="Description" Required="true" Label="Description" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => Rate)" @bind-Value="Rate" Required="true" Label="Rate" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => Barcode)" Required="true" @bind-Value="Barcode" Label="Barcode" />
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
            @if (Id != 0)
            {
                <MudButton Variant="Variant.Filled" OnClick="SaveAsync" Color="Color.Secondary">Update</MudButton>
            }
            else
            {
                <MudButton Variant="Variant.Filled" OnClick="SaveAsync" Color="Color.Success">Save</MudButton>
            }
        </DialogActions>

    </MudDialog>
</MudForm>