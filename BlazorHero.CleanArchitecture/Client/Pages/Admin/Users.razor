@page "/admin/users"

<HeroTitle Title="Users" Description="Manage Users."/>
<MudTable Elevation="25" Items="GetUsersAsync()" Filter="new Func<UserViewModel, bool>(Search)" @bind-user="user">
    <ToolBarContent>
        <MudToolBarSpacer />
        <MudTextField @bind-Value="searchString" Placeholder="Search for Users..." Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0 mb-3"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>First Name</MudTh>
        <MudTh>Last Name</MudTh>
        <MudTh>Phone Number</MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Id">@context.Id</MudTd>
        <MudTd DataLabel="FirstName">@context.FirstName</MudTd>
        <MudTd DataLabel="LastName">@context.FirstName</MudTd>
        <MudTd DataLabel="PhoneNumber">@context.FirstName</MudTd>
        <MudTd DataLabel="">
            <MudFab DisableElevation Color="Color.Primary" Icon="@Icons.Material.Filled.Edit" Size="Size.Small" IconSize="Size.Small" />
            <MudFab DisableElevation Color="Color.Secondary" Icon="@Icons.Material.Filled.Delete" Size="Size.Small" IconSize="Size.Small" />
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>