@page "/resources"
@inject Microsoft.Extensions.Localization.IStringLocalizer<Resources> localizer

<HeroTitle Title="@localizer["Resources"]" Description="@localizer["Access Resources here."]" />

<MudGrid>
    <MudItem xs="12" md="6">
        <MudCard Elevation="25">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Size="Size.Large" Rounded="true" Color="Color.Primary">
                        <MudIcon Icon="@CustomIcons.BlazorHero" ViewBox="0 0 500 500" Size="Size.Large" />
                    </MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body1">@localizer["Awesome Blazor"]</MudText>
                    <MudText Typo="Typo.body2">@localizer["Awesome Blazor Description"]</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.Filled.ArrowForwardIos" Link="https://github.com/AdrienTorris/awesome-blazor" Color="Color.Surface" />
                </CardHeaderActions>
            </MudCardHeader>
        </MudCard>
    </MudItem>
