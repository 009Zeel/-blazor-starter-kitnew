@page "/resources"

<HeroTitle Title="Resources" Description="Access Resources here." />

<MudGrid>
    <MudItem xs="12" md="6">
        <MudCard Elevation="25">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Size="Size.Large" Rounded="true" Color="Color.Primary">
                        <MudIcon Icon="@CustomIcons.BlazorHero" ViewBox="0 0 500 500" Size="Size.Large" />
                    </MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body1">Awesome Blazor</MudText>
                    <MudText Typo="Typo.body2">Great place to learn, find information and projects/examples about Blazor.</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.Filled.ArrowForwardIos" Link="https://github.com/AdrienTorris/awesome-blazor" Color="Color.Surface" />
                </CardHeaderActions>
            </MudCardHeader>
        </MudCard>
    </MudItem>
    <MudItem xs="12" md="6">
        <MudCard Elevation="25">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Size="Size.Large" Rounded="true" Color="Color.Primary">
                        <MudIcon Icon="@CustomIcons.BlazorHero" ViewBox="0 0 500 500" Size="Size.Large" />
                    </MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body1">Awesome Blazor</MudText>
                    <MudText Typo="Typo.body2">Great place to learn, find information and projects/examples about Blazor.</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.Filled.ArrowForwardIos" Link="https://github.com/AdrienTorris/awesome-blazor" Color="Color.Surface" />
                </CardHeaderActions>
            </MudCardHeader>
        </MudCard>
    </MudItem>
</MudGrid>


<AuthorizeView>
    <Authorized>
        <h1>Hello @context.User.Identity.Name !!</h1>
        @foreach (var claims in context.User.Claims)
        {
            <h6>Type: @claims.Type + Value:  @claims.Value</h6>
        }
    </Authorized>
</AuthorizeView>

